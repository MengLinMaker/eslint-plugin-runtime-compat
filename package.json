{
  "name": "@menglinmaker/eslint-runtime-compat",
  "version": "0.0.0",
  "description": "Eslint check JS runtime conpatability issues. Inspired by eslint-plugin-compat and runtime-compat-data.",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist"
  ],
  "repository": "https://github.com/MengLinMaker/eslint-runtime-compat.git",
  "keywords": [
    "eslint",
    "runtime",
    "compat",
    "linting"
  ],
  "author": "Meng Lin <menglinmaker@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/MengLinMaker/eslint-runtime-compat/issues"
  },
  "homepage": "https://github.com/MengLinMaker/eslint-runtime-compat#readme",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "postinstall": "simple-git-hooks",
    "format": "biome check --write --verbose",
    "lint": "eslint --fix & tsc --noEmit --incremental",
    "test": "vitest",
    "build": "unbuild",
    "release": "changeset publish"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.8.3",
    "@changesets/cli": "^2.27.7",
    "@eslint/js": "^9.6.0",
    "@vitest/coverage-v8": "^2.0.2",
    "eslint": "^9.6.0",
    "eslint-plugin-compat": "^5.0.0",
    "simple-git-hooks": "^2.11.1",
    "typescript-eslint": "^7.16.0",
    "unbuild": "^2.0.0",
    "vitepress": "^1.3.0",
    "vitest": "^2.0.2"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm run format",
    "pre-push": "pnpm run lint"
  },
  "browserslist": [
    "defaults"
  ]
}
